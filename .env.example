# Configurações do Bot
BOT_NAME=iMavyAgent
BOT_VERSION=2.0

# Horários de abertura/fechamento
GRUPO_HORARIO_ABERTURA=07:00
GRUPO_HORARIO_FECHAMENTO=00:00

# DDD padrão para números sem código de área
DDD_PADRAO=64

# Cooldown de comandos (em segundos)
COMMAND_COOLDOWN=3

# Porta do servidor QR
QR_SERVER_PORT=3001

# Supabase (opcional)
# URL/chave do novo projeto (dashboard + bot)
IMAVY_SUPABASE_URL=
IMAVY_SUPABASE_ANON_KEY=
IMAVY_SUPABASE_SERVICE_KEY=
IMAVY_MULTITENANT_WRITE_ENABLED=true
IMAVY_MULTITENANT_STRICT=false
# Mapa opcional JSON para vincular grupo WhatsApp ao cliente:
# {"123456789@g.us":"uuid-do-cliente","987654321@g.us":{"clienteId":"uuid-do-cliente","nome":"Grupo Cripto"}}
IMAVY_GROUP_CLIENTE_MAP=

# Compatibilidade com nomes antigos
SUPABASE_URL=
SUPABASE_KEY=

# APIs IA (obrigatório para IA funcionar)
GROQ_API_KEY=
OPENROUTER_API_KEY=
PERPLEXITY_API_KEY=
HUGGING_FACE_API=
COINGECKO_API_KEY=
COINGECKO_API_PLAN=demo
COINGECKO_API_HEADER=
IMAVY_GROQ_MODEL=llama-3.3-70b-versatile
IMAVY_MENTION_COOLDOWN=12
IMAVY_MAX_COINS=4

# Administradores autorizados (separados por vírgula)
AUTHORIZED_IDS=

# Desenvolvedores (acesso total ao bot via WhatsApp)
DEV_IDS=

# Grupos permitidos (separados por vírgula)
ALLOWED_GROUP_NAMES=

# Webhook para notificações (opcional)
WEBHOOK_URL=
